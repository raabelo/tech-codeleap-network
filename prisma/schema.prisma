generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  username    String @unique
  connectedIn String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Article {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  username String
  title    String
  content  String

  parentArticleId String

  likes    String[]
  dislikes String[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
